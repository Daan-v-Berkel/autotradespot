# Django Settings
DJANGO_DEBUG=False
DJANGO_SECRET_KEY=change-me-to-a-random-secret-key
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
DJANGO_ADMIN_URL=admin/
DJANGO_READ_DOT_ENV_FILE=True

# Database
# PostgreSQL example: postgres://user:password@localhost:5432/autotradespot
DATABASE_URL=postgres://postgres:postgres@postgres:5432/autotradespot

# Cache & Message Broker
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0

# Email Configuration
DJANGO_EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
DJANGO_DEFAULT_FROM_EMAIL=noreply@yourdomain.com
DJANGO_SERVER_EMAIL=server@yourdomain.com

# CORS Configuration
# Comma-separated list of allowed origins for cross-origin requests
# Example: https://yourdomain.com,https://app.yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# External API Tokens
# Get your RDW Open Data token from: https://opendata.rdw.nl/
CARDATA_API_APP_TOKEN=your-rdw-cardata-api-token-here

# SSL/HTTPS (Production)
DJANGO_SECURE_SSL_REDIRECT=True
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=True
DJANGO_SECURE_HSTS_PRELOAD=True
DJANGO_SECURE_CONTENT_TYPE_NOSNIFF=True

# AllAuth
DJANGO_ACCOUNT_ALLOW_REGISTRATION=True
DJANGO_ADMIN_FORCE_ALLAUTH=False

# Sentry (Optional Error Tracking)
SENTRY_DSN=
